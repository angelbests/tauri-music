{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:54320",
    "distDir": "../dist"
  }, 
  "package": {
    "productName": "skymusic",
    "version": "1.0.0"
  },  
  "tauri": {
    "allowlist": { 
      "all": true,  
      "shell": {   
        "all": true,  
        "open": false,
        "execute": true,
        "sidecar": true, 
        "scope": [
          {
            "name": "/sidecar/music",
            "sidecar": true
          }
        ]   
      }, 
      
      "window": {  
        "all": true
      },  
      "globalShortcut": {
        "all": true   
      }, 
      "dialog": {
        "all": true 
      },   
      "fs":{
        "all": true, 
        "scope": ["**"]
      },  
      "path":{   
        "all": true 
      },  
      "clipboard": {
        "all": true
      }, 
      "http": {
        "all": true, 
        "request": true, 
        "scope": [ 
          "http://**",
          "https://**"
        ]
      },
      "protocol": {
        "all": true,
        "asset": true, 
        "assetScope":["**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "skymusic.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.ico"
      ],
      "externalBin": [
        "sidecar/music"
      ]
    },  
    "security": {
      "csp": null
    }, 
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "music",
        "decorations": false,
        "transparent": true,
        "width": 1050,
        "minWidth": 1050,
        "height": 750,
        "minHeight": 750
      },
      {
        "label": "node",
        "visible": false
      }
    ]
  }
}
